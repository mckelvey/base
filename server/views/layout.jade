        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-#######-#', 'domain.tld');
        ga('send', 'pageview');
    block head
  body
    .page
      header
      div#content
        <!--[if lt IE 10]>
        p.chromeframe Your browser is 
          em ancient!
          a(href="http://browsehappy.com/") Upgrade to a different browser
          | or 
          a(href="http://www.google.com/chromeframe/?redirect=true") install Google Chrome Frame
          | to experience this site.
        <![endif]-->
        block content
      footer
        div.vcard
          p
            a(class="fn org url", href="http://www.domain.tld") Title
          address.adr
            span(class="street-address") Street Address
            span(class="locality") City
            span(class="region") State
            span(class="postal-code") Zip
            abbr(class="country-name", title="United States of America") USA
          p(class="email")
            a(class="email", href="mailto:info@domain.tld") info@domain.tld
          p(class="tel")
            a(class="tel", href="tel:###-###-####") ###-###-####
    - if (locals.env == 'dev') {
      script(src="/scripts/jquery.js")
      script(src="/scripts/lodash.js")
      script(src="/scripts/react.js")
      script(src="/scripts/bootstrap.js")
      script(src='/scripts/react-components.js?' + marker)
      script(src='/scripts/main.js?' + marker)
    - } else {
      script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
      script.
        (window.jQuery)||document.write('<script src="/scripts/jquery.min.js"><\/script>');
      script(src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js")
      script.
        (window._)||document.write('<script src="/scripts/lodash.min.js"><\/script>');
      script(src="//cdnjs.cloudflare.com/ajax/libs/react/0.11.1/react.min.js")
      script.
        (window.React)||document.write('<script src="/scripts/react-with-addons.min.js"><\/script>');
      script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js")
      script(src='/scripts/react-components.min.js?' + marker)
      script(src='/scripts/main.min.js?' + marker)
    - }
    block scripts
    - if (locals.env === 'dev' && typeof locals.liveReloadPort === 'number') {
      script(src="//localhost:#{locals.liveReloadPort}/livereload.js?snipver=1")
    - }
